				<sp:courseUc sc:refUri="/Cours/merise/merise.xml"/>
				<sp:courseUa sc:refUri="/Cours/flux/flux.xml"/>
				<sp:courseUa sc:refUri="/Cours/mct/mct.xml"/>
			</op:ueDiv>
		</sp:div>
